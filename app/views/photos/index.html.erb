<%= button_to "New Photo", new_photo_path, class: "btn btn-lg btn-primary pull-right", method: "get" %>
<div class="container text-center">
  <% @photos.each do |photo| %>
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <div class="photo">
            <%= link_to image_tag(photo.image_url().to_s, {class: "img-thumbnail"}), photo_path(photo.id)%>
            <div class="row">
              <div class="col-sm-4 col-md-4 col-lg-4">

              </div>
              <div class="col-sm-4 col-md-4 col-lg-4">
                <div class="name"><%= photo.name %> by <%= photo.user.name %> |
                  <% photo.hashtags.each do |hashtag| %>
                    <%= link_to "##{hashtag.name}", "photos?q=#{hashtag.name}" %>
                  <% end %>
                </div>
              </div>
              <div class="col-sm-4 col-md-4 col-lg-4 text-right">
                <%= link_to( current_user ? submit_vote_path(photo.id) : "javascript:void(0);" ) do %>
                    <i class='fa fa-thumbs-o-up fa-2x like'></i>
                    <% end %>
                <%= photo.likes.count %>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
