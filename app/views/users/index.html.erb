<h1>List of Users</h1>

<table>
 <thead>
   <tr>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @users.each do |user| %>
     <tr>
       <td><%= user.name %></td>
       <td><%= link_to 'Show', user %></td>
       <td><%= link_to 'Edit', edit_user_path(user) %></td>
       <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to remove user?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>

